<%- include('partials/header_main') %>

<section class="vh-100" style="background-color: #9DC08B;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://images.wallpaperscraft.com/image/single/city_singapore_hotel_58356_1920x1280.jpg"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; width: 400px;
                height: 600px;
                object-fit: cover; " />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <form>

                  <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fas fa-regular fa-hotel fa-2xl " style="color: #ff6219;"></i>
                    <span class="h1 fw-bold mb-0">Logo</span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                  <form action="/register" method="POST">
                      <div class="form-outline mb-4">
                        <input type="email" id="form2Example17" class="form-control form-control-lg" />
                        <label class="form-label"  name="username">Email address</label>
                      </div>
    
                      <div class="form-outline mb-4">
                        <input type="password" id="form2Example27" class="form-control form-control-lg" />
                        <label class="form-label"  name="password">Password</label>
                      </div>

                  </form>

                  <div class="pt-1 mb-4">
                      <button type="submit" href="/secrets" class="btn btn-success btn-lg btn-block">Register</button>
                  </div>
                  <a class="btn btn-block btn-primary" style="background-color: #dd4b39" href="/auth/google" role="button">
                      <i class="fab fa-google fa-lg me-2"></i>
                      Sign Up with Google
                    </a>
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>